{
  "name": "react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.21.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4",
    "redux-actions": "^2.6.5",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0",
    "styled-components": "^4.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "export BROWSER=none && npm run eslint && npm run test:cypress && npm run test:jest",
    "test:jest": "react-scripts test --watchAll=false --forceExit",
    "eject": "react-scripts eject",
    "cypress": "./node_modules/.bin/cypress open",
    "test:cypress": "./node_modules/.bin/pm2 start npm -- start && ./node_modules/.bin/cypress run --spec **/*.feature && ./node_modules/.bin/pm2 kill",
    "precommit": "lint-staged",
    "eslint": "node_modules/.bin/eslint src/ --max-warnings=0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.10.6",
    "cypress": "^3.8.3",
    "cypress-cucumber-preprocessor": "^2.0.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-cypress": "^2.8.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "pm2": "^4.4.0",
    "redux-mock-store": "^1.5.4"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "cypress-cucumber-preprocessor": {
    "step_definitions": "cypress/support/step_definitions/"
  },
  "lint-staged": {
    "*.{js, jsx}": [
      "npm run eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  }
}
